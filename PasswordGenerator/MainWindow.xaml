<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Password" Height="164" Width="299">
    <Grid>
        <Button Content="Generate" Height="23" HorizontalAlignment="Left" Margin="12,88,0,0" Name="btnGenerate" VerticalAlignment="Top" Width="75" Click="btnGenerate_Click" />
        <Slider Height="23" Margin="12,39,12,0" Name="slider1" VerticalAlignment="Top" Interval="1" Maximum="20" Minimum="1" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" ValueChanged="slider1_ValueChanged" Value="10" />
        <TextBox Height="23" Margin="105,89,12,0" Name="txtPassword" VerticalAlignment="Top" />
        <Label Content="10" Height="28" HorizontalAlignment="Left" Margin="105,12,0,0" Name="lblSize" VerticalAlignment="Top" />
        <Label Content="Password Size:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
